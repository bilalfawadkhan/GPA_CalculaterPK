<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/air_img"
        app:layout_constraintTop_toBottomOf="@+id/air_img"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/textView"
            android:layout_width="120dp"
            android:layout_height="85dp"
            android:layout_marginTop="72dp"
            android:text="0.0"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="121dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="GPA"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="135dp"
            android:layout_height="55dp"
            android:layout_marginTop="56dp"
            android:text="Calculate GPA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textLayout"
            android:background="@drawable/buttonstyle"/>

        <LinearLayout
            android:id="@+id/creditLayout"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toEndOf="@+id/textLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView"></LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>